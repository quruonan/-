page {
  display: flex;
  flex-direction: column;
  position: relative;
  height: 100%;
  padding-bottom: 230rpx;
  box-sizing: border-box;
}
.avatar {
  height: 500rpx;
}
.avatar image {
  width: 100%;
  height: 100%;
}
.result {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.result text {
  display: block;
  text-align: center;
}
button {
  position: absolute;
  bottom: 70rpx;
  left: 50%;
  transform: translateX(-50%);
}